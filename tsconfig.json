{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es6", "dom"],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "esModuleInterop": true,
    "jsx": "react",
    "declaration": true,
    "declarationDir": "./types",
    "baseUrl": "./",
    "paths": {
      "*": ["@types/*"]
    }
  },
  "include": ["./src/index.ts"],
  "exclude": ["node_modules", "__tests__"]
}
